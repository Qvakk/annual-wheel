{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Your Organization",
    "websiteUrl": "https://example.com",
    "privacyUrl": "https://example.com/privacy",
    "termsOfUseUrl": "https://example.com/terms"
  },
  "name": {
    "short": "Annual Wheel",
    "full": "Annual Wheel - Visual Planning"
  },
  "description": {
    "short": "Visual annual planning and event management",
    "full": "A visual annual wheel application for planning recurring events, deadlines, and activities throughout the year. Organize your team's schedule with an intuitive circular calendar view."
  },
  "localizationInfo": {
    "defaultLanguageTag": "nb-no",
    "additionalLanguages": [
      {
        "languageTag": "en",
        "file": "en.json"
      },
      {
        "languageTag": "nn-no",
        "file": "nn.json"
      }
    ]
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#0078D4",
  "staticTabs": [
    {
      "entityId": "wheel",
      "name": "Wheel",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/wheel",
      "scopes": ["personal"]
    },
    {
      "entityId": "events",
      "name": "Events",
      "contentUrl": "${{TAB_ENDPOINT}}/index.html#/events",
      "scopes": ["personal"]
    }
  ],
  "configurableTabs": [],
  "bots": [],
  "composeExtensions": [],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": [
    "${{TAB_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "${{AAD_APP_CLIENT_ID}}",
    "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
  }
}
